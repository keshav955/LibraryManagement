<style>

    h2 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
    }

    table {
        margin: 0 auto;
        width: 90%;
        text-align: left;
    }

  @*  tr:nth-child(even) {
        background-color: #333333;
        color: white;
    }
*@
    th {
        padding-top: 20px !important;
        padding-bottom: 20px;
        border-bottom: 1px dotted grey;
    }

    .header {
        color: #333333;
        padding: 5px;
    }
        .header:hover {
            background-color: rgba(0,0,0,0.0);
            color: #333333;
        }

    tr {
        color: #333333;
        background-color: white;
        padding-left: 10px;
        border-bottom: 1px dashed grey;
    }

        tr:hover {
            background-color: darkslategrey;
            color: white;
        }

    td {
        width: 25%;
        padding: 5px;
    }
</style>
<h2 class="text-center">Books</h2>
<table>
    <tr class="header">
        <th>Book ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Publiser</th>
        <th>Available</th>
    </tr>
    @foreach (var book in ViewBag.books)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Title</td>
            <td>@book.Auther</td>
            <td>@book.Publisher</td>
            <td>@book.Available</td>
        </tr>
    }
</table>
