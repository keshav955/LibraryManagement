@model Login
@{
    ViewData["Title"] = "Login";
}

<style>
    .body {
        background-color: lightgrey;
    }

    .box {
        background-color: white;
        margin: 0 auto;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-content: center;
        flex-direction: column;
        text-align: center;
        border: 1px solid lightgrey;
        overflow: hidden;
        padding: 20px;
        color: #5D6061;
        box-shadow: rgba(0,0,0,0.2) 2px 2px 2px;
    }

        .box:before {
            content: '';
            width: 120%;
            margin-top: -20px;
            margin-left: -20px;
            border-bottom: solid 3px #007BFF;
            z-index: 1;
        }

    .horizontal {
        display: flex;
        flex-direction: row;
        text-align: center;
        justify-content: center;
        padding: 20px;
        color: #212529;
    }

        .horizontal span {
            font-size: 35px;
        }

    .box .line {
        width: 100%;
        height: 1.5px;
        background-color: lavender;
        margin-bottom: 15px;
    }

    .box .half-line {
        width: 35%;
        height: 1.5px;
        background-color: lavender;
        transform: translateY(12px);
    }
</style>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 box1">
        <form asp-action="Login" asp-controller="Library" method="post">
            <div class="container-fluid">
                <div class="horizontal">
                    <span><b>User</b> </span><span>Login</span>
                </div>
                <div class="box">

                    <div class="line"></div>
                    <div class="container-fluid"></div>
                    <p>Sign in to start your session</p>


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mt-4">
                        <div class="input-group">
                            <input placeholder="User Name" asp-for="@Model.Email" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="fas fa-user"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <div class="input-group">
                            <input placeholder="Password" asp-for="@Model.Password" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="fas fa-key"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="mt-4 mb-2">
                        <button class="btn btn-primary" type="submit">Sign In</button>
                    </div>

                    <div class="horizontal" style="margin-bottom:-20px;">
                        <div class="half-line"></div>
                        <p style="color: lavender;">&nbsp;OR&nbsp;</p>
                        <div class="half-line"></div>
                    </div>


                    <div>
                        <button type="button" class="btn btn-primary btn-md btn-block"><i class="fab fa-facebook"></i>&nbsp; Sign In using Facebook</button>
                        <button type="button" class="btn btn-danger btn-md btn-block"><i class="fab fa-google-plus"></i> &nbsp; Sign In using Google</button>
                    </div>


                </div>
            </div>
        </form>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.ErrorMessage");
            };
        </script>
    }
</div>



