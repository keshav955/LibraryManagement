
@model CreateRole

<h1>Login</h1>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 box">
        <form asp-action="CreateRole" asp-controller="Library" method="post">
            <h4>Create Role.</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.RoleName"></label>
                <input asp-for="@Model.RoleName" class="form-control" />
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create Role</button>
        </form>
    </div>
    <div class="col-md-4">@ViewBag.ErrorMessage</div>

</div>