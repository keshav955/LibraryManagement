@model IEnumerable<User>
@inject UserManager<User> userManager;
@{
    ViewBag.Title = "All Users";
}
<style>

    h2 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
    }

    table {
        padding-right: 10px;
        margin: 0 auto;
        width: 90%;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #333333;
        color: white;
    }

    th {
        padding: 6px;
    }

    .header {
        color: #333333;
    }

    tr {
        color: #333333;
        background-color: white;
    }

        tr:hover {
            background-color: gray;
            color: white;
        }

    td {
        width: 25%;
        padding: 5px;
    }
</style>
<h1>All Users</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Library"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>


    <table>
        <tr class="header">
            <th>User Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>
                IsApproved
            </th>
            <th>Role</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td>@item.IsApproved</td>
                <td>@await userManager.GetRolesAsync(item)</td>
            </tr>
        }

        <a class="btn btn-primary" style="width:auto"
           asp-controller="library" asp-action="ListByRole">
           Get List By Roles
        </a>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="library" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}
