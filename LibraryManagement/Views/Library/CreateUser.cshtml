@model RegisterUser
@{

    ViewData["Title"] = "Create User";

}
<style>
    .body {
        background-color: lightgrey;
    }

    .box {
        background-color: white;
        margin: 0 auto;
        width: 35%;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-content: center;
        flex-direction: column;
        text-align: center;
        border: 1px solid lightgrey;
        overflow: hidden;
        padding: 20px;
        color: #5D6061;
        box-shadow: rgba(0,0,0,0.2) 2px 2px 2px;
    }

        .box:before {
            content: '';
            width: 120%;
            margin-top: -20px;
            margin-left: -20px;
            border-bottom: solid 3px #007BFF;
            z-index: 1;
        }

    .horizontal {
        display: flex;
        flex-direction: row;
        text-align: center;
        justify-content: center;
        padding: 20px;
        color: #212529;
    }

        .horizontal span {
            font-size: 35px;
        }

    .box .line {
        width: 100%;
        height: 1.5px;
        background-color: lavender;
        margin-bottom: 15px;
    }

    .box .half-line {
        width: 35%;
        height: 1.5px;
        background-color: lavender;
        transform: translateY(12px);
    }
</style>

<div class="row mt-5 pt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4 box">
        <form asp-action="CreateUser" asp-controller="Library" method="post">
            <h4 class="mt-3">Create a new User</h4>
            <hr />

            <div class="form-group mt-4">
                <div class="input-group">
                    <input placeholder="User Name" asp-for="@Model.UserName" class="form-control" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-user"></i></div>
                    </div>
                </div>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <div class="input-group">
                    <input placeholder="Email" asp-for="@Model.Email" class="form-control" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                    </div>
                </div>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>


            <div class="form-group mt-4">
                <select class="custom-select" name="Selectedrole">
                    <option selected>---Select Role---</option>
                    <option value="reader">Reader</option>
                    <option value="librarian">Librarian</option>
                    <option value="admin">admin</option>
                </select>
            </div>

            <div class="form-group mt-4">
                <div class="input-group">
                    <input placeholder="Password" asp-for="@Model.Password" class="form-control" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>

                </div>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <div class="input-group">
                    <input placeholder="Confirm Password" asp-for="@Model.ConfirmPassword" class="form-control" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                </div>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-4 mb-4">
                <button class="btn btn-primary" type="submit">Register</button>
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>

</div>